{
  "name": "boilerplate-reactapp",
  "version": "0.1.0",
  "private": true,
  "resolutions": {
    "babel-loader": "8.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "yarn && build-storybook -s public && cross-env SURGE_TOKEN=46697a9fa99b74fc7e6738e8a94955eb SURGE_LOGIN=indiorleioliveira@gmail.com surge ./storybook-static bdlplatestlguide.surge.sh"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/test.tsx"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts(x)?",
      "!src/**/stories.tsx",
      "!src/styles/*.ts",
      "!src/reportWebVitals.ts",
      "!src/**/*.d.ts",
      "!src/index.tsx"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.3",
    "typescript": "^4.4.4",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "cross-env": "7.0.2",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/node-logger": "^6.3.12",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.12",
    "plop": "^2.7.6",
    "storybook-react-router": "^1.0.8"
  }
}
